<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:padding="15dp"
    android:background="#000000"
    tools:context=".MainActivityKK">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <utils.kkutils.ui.video.douyin2.views.KVideoViewDouble
            android:id="@+id/kvideo_left"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"></utils.kkutils.ui.video.douyin2.views.KVideoViewDouble>

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="0dp" android:layout_weight="1"
            android:id="@+id/imgv_video"
            android:layout_height="match_parent"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_choose"
            android:text="选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/btn_rotain"
            android:text="旋转"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</RelativeLayout>