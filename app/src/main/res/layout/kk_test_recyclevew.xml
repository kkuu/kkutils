<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivityKK">

    <utils.kkutils.ui.KKAutoLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/btn_add_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="增加一个到顶部" />

        <TextView android:id="@+id/btn_test_jiange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="间隔测试" />
    </utils.kkutils.ui.KKAutoLayout>
    <utils.kkutils.ui.pullrefresh.KKRefreshLayout
        android:id="@+id/refreshLayout" android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <utils.kkutils.ui.KKSimpleRecycleView
            android:id="@+id/recycleView"
            app:maxHeight="400dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></utils.kkutils.ui.KKSimpleRecycleView>
    </utils.kkutils.ui.pullrefresh.KKRefreshLayout>

</LinearLayout>