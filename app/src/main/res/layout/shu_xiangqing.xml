<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:background="#FAF9DE"
    tools:context=".MainActivityKK">


    <LinearLayout android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_curr_zhang"
            style="@style/kk_textview"
            android:padding="10dp"
            android:text="第一"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/tv_go_goshezhi"
            style="@style/kk_textview"
            android:padding="10dp"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tv_go_mulu"
            style="@style/kk_textview"
            android:padding="10dp"
            android:text="目录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>


    <utils.kkutils.ui.KKScrollView
        android:id="@+id/shu_scrollview"
        style="@style/kk_book_scrollview">

        <TextView
            android:id="@+id/tv_shu_content"
            style="@style/kk_textview"
            android:textSize="17dp"
            tools:text="放大斯洛伐克受打击了"
            android:lineSpacingExtra="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>

    </utils.kkutils.ui.KKScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/btn_go_next"
            android:text="下一章"
            android:gravity="center"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/btn_go_next_page"
            android:text="下一页"
            android:gravity="center"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"></TextView>

    </LinearLayout>

</LinearLayout>