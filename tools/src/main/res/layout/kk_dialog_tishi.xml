<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <LinearLayout android:background="@drawable/kk_drawable_yuanjiao_3_bai"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="55dp">

            <TextView android:id="@+id/kk_tv_dialog_title"
                style="@style/kk_textview" android:textStyle="bold"
                android:text="提示"
                android:textColor="#ff333333"
                android:textSize="17dp" android:layout_height="match_parent" android:gravity="center" android:layout_width="match_parent"
                />


        </RelativeLayout>

        <utils.kkutils.ui.KKScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView android:id="@+id/kk_tv_dialog_content"
                style="@style/kk_textview"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="测试文字测试文字测试文字测试文字测试文字测试文字测试文字"
                android:lineSpacingExtra="5dp"
                android:textColor="#ff666666"
                android:textSize="14dp"
                />

        </utils.kkutils.ui.KKScrollView>

        <View style="@style/kk_line_h"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/kk_btn_dialog_quxiao"
                style="@style/kk_textview"
                android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp" android:gravity="center"
                android:text="取消"
                android:textColor="#ff999999"
                android:textSize="17dp"
                />
            <View style="@style/kk_line_v"></View>
            <TextView
                android:id="@+id/kk_btn_dialog_queding"
                style="@style/kk_textview"
                android:layout_weight="1" android:layout_height="match_parent" android:layout_width="0dp" android:gravity="center"
                android:text="确定"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                />

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>